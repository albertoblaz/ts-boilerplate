{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "app/*": [
        "app/*"
      ],
    },
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "node"
    ],
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "strictFunctionTypes": false,
    /* Not transpiling with Typescript (using Vite) */
    "module": "preserve",
    "noEmit": true,
    /* Running in the DOM */
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    /* Using React */
    "jsx": "react-jsx",
    /* Others */
    "skipDefaultLibCheck": true,
    "removeComments": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
  },
  "exclude": [
    "dist/**/*",
    "**/stories/*",
    "**/node_modules/*",
    "**/types",
  ],
  "include": [
    "app",
    "tailwind.config.ts"
  ]
}
